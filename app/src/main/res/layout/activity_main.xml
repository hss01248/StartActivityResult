<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/colorPrimary"
    android:paddingBottom="30dp"
    android:orientation="vertical"
    tools:context=".MainActivity">
<!--fragment实现-->
    <TextView
        android:layout_width="match_parent"
        android:text="fragment实现:"
        android:padding="20dp"
        android:layout_height="wrap_content"/>
    <Button
        android:id="@+id/btn_lifecycle"
        android:text="跳内部activity"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <Button
        android:id="@+id/btn_pick_photo"
        android:text="跳到系统选图界面-有回调"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <Button
        android:id="@+id/btn_notification"
        android:text="跳到系统通知权限界面-无回调"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <TextView
        android:layout_width="match_parent"
        android:text="androidx api实现:"
        android:padding="20dp"
        android:layout_height="wrap_content"/>
    <Button
        android:onClick="inner2"
        android:text="跳内部activity"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <Button
        android:onClick="notification2"
        android:text="跳到系统通知权限界面"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <TextView
        android:layout_width="match_parent"
        android:text="透明activity当做dialog:"
        android:padding="20dp"
        android:layout_height="wrap_content"/>
    <Button
        android:onClick="activityAsDialog"
        android:text="activityAsDialog"
        android:textAllCaps="false"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <Button
        android:onClick="dialogAsToast"
        android:text="dialogAsToast"
        android:textAllCaps="false"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>


</LinearLayout>